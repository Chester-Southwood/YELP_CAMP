<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h4><%= error.message %></h4>
            <% if (process.env.NODE_ENV !== 'production') {%>
            <p><%= error.stack %></p> <!--Should only be enabled on non production code-->
            <% } %>
        </div>
    </div>
</div>